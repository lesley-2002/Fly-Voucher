package me.OnlineMetLesley.com.FlyVoucher;

import org.bukkit.ChatColor;
import org.bukkit.entity.Player;
import org.bukkit.event.EventHandler;
import org.bukkit.event.EventPriority;
import org.bukkit.event.Listener;
import org.bukkit.event.block.Action;
import org.bukkit.event.player.PlayerInteractEvent;

public class PlayerInteract implements Listener {
   @EventHandler(
      priority = EventPriority.HIGH
   )
   public void onPlayerUse(PlayerInteractEvent event) {
      Player player = event.getPlayer();
      if (Main.instance.getConfig().getBoolean("RightClickVoucher") && event.getAction().equals(Action.RIGHT_CLICK_AIR) && event.getItem().equals(Main.Voucher())) {
         player.setAllowFlight(true);
         player.setFlying(true);
         player.sendMessage(ChatColor.translateAlternateColorCodes('&', Main.instance.getConfig().getString("RightClickConfirmed")));
      }

   }
}
